{
    "private": true,
    "type": "module",
    "scripts": {
        "dev:styles": "npx @tailwindcss/cli -i resources/css/index.css -o resources/dist/filament-edit-profile.css --postcss --watch",
        "dev:scripts": "node bin/build.js --dev",
        "build:styles": "npx @tailwindcss/cli -i resources/css/index.css -o resources/dist/filament-edit-profile.css --postcss --minify && npm run purge",
        "build:scripts": "node bin/build.js",
        "purge": "filament-purge -i resources/dist/filament-edit-profile.css -o resources/dist/filament-edit-profile.css -v 3.x",
        "dev": "npm-run-all --parallel dev:*",
        "build": "npm-run-all build:*"
    },
    "devDependencies": {
        "@awcodes/filament-plugin-purge": "^1.1.1",
        "@tailwindcss/forms": "^0.5.4",
        "@tailwindcss/postcss": "^4.1.10",
        "@tailwindcss/typography": "^0.5.9",
        "esbuild": "^0.19.2",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.5.6",
        "prettier": "^3.0",
        "prettier-plugin-tailwindcss": "^0.6.13",
        "tailwindcss": "^4.1.10"
    }
}
